<% layout('/layouts/boilerplate') -%>

<style>
#filters{
  display: flex;
  flex-wrap: wrap;
  margin-left: 1.6rem;
}
.filter{
  text-align: center;
  margin-right: 2.5rem;
  margin-top: 1.5rem;
  opacity: 0.7;
  cursor: pointer;
}
.filter:hover{
  opacity: 1;
}

</style>


  <div id="filters">
    
    <div class="filter">
      <a href="/listings/search?q=trending" style="text-decoration: none; color: inherit;">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>
    </div>


    <div class="filter">
      <a href="/listings/search?q=rooms" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-bed"></i></div>
       <p>Rooms</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Mountain" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-mountain"></i></div>
       <p>Mountain</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Amazing pools" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-person-swimming"></i></div>
       <p>Amazing pools</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Farms" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-tractor"></i></div>
       <p>Farms</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Beachfront" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
       <p>Beachfront</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Artic" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-snowflake"></i></div>
       <p>Artic</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Castles" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-chess-rook"></i></div>
       <p>Castles</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Treehouses" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-tree"></i></div>
       <p>Treehouses</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Igloo" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-igloo"></i></div>
       <p>Igloo</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Boats" style="text-decoration: none; color: inherit;"></a>
      <div><i class="fa-solid fa-ship"></i></div>
       <p>Boats</p>
      </a>
    </div>

    <div class="filter">
      <a href="/listings/search?q=Building" style="text-decoration: none; color: inherit;"></a>
      <div> <i class="fa-solid fa-city"></i></div>
       <p>Building</p>
      </a>
    </div>

  </div>

  <% if (listings.length === 0) { %>
    <div class="alert alert-warning text-center mt-4" role="alert">
      No listings match your search. Try something else!
    </div>
  <% } %>

  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 row-cols-xs-1 mt-3">
    <% for(let listing of listings){ %>
    <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card col listing-card" style="width:28rem;">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="image"
          style="height: 20rem;"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            <%= listing.price.toLocaleString("en-IN") %>/night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
